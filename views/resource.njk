{% extends 'base.njk' %}
{% block title %}File Analyzer{% endblock %}

{% block content %}
<div class="container">
    <div class="d-flex justify-content-center align-items-center flex-column vh-100" style="gap: 2rem;">

        <div>
            <h3>File Content:</h3>
            <p class="file-content">{{content}}</p>
        </div>

        <div class="btn-group" role="group" aria-label="Basic example">
            {% for item in apiList %}
                <a href="{{item.url}}" type="button" class="action btn btn-outline-secondary text-white">{{item.name}}</a>
            {% endfor %}
        </div>

        <div>
            <h3>Result:</h3>
            <p class="file-content result">-</p>
        </div>

        <a href="/" class="btn btn-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"/>
        </svg> Try another file</a>
    </div>
</div>
{% endblock %}

{% block script %}
{# Import axios #}
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script defer src="/js/resource.js"></script>
{% endblock %}